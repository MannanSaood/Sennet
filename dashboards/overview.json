{
    "id": null,
    "uid": "sennet-overview",
    "title": "Sennet Network Overview",
    "description": "Network observability dashboard for Sennet agents",
    "tags": [
        "sennet",
        "ebpf",
        "network"
    ],
    "timezone": "browser",
    "schemaVersion": 39,
    "version": 1,
    "refresh": "10s",
    "time": {
        "from": "now-1h",
        "to": "now"
    },
    "templating": {
        "list": [
            {
                "name": "agent",
                "type": "query",
                "datasource": "${DS_PROMETHEUS}",
                "query": "label_values(sennet_rx_packets_total, agent_id)",
                "refresh": 2,
                "includeAll": true,
                "multi": true,
                "current": {
                    "text": "All",
                    "value": "$__all"
                }
            }
        ]
    },
    "annotations": {
        "list": [
            {
                "name": "Anomalies",
                "datasource": "${DS_PROMETHEUS}",
                "enable": true,
                "iconColor": "red",
                "expr": "sennet_anomaly_events_total > 0"
            }
        ]
    },
    "panels": [
        {
            "id": 1,
            "title": "Packets/sec (Ingress)",
            "type": "timeseries",
            "gridPos": {
                "x": 0,
                "y": 0,
                "w": 12,
                "h": 8
            },
            "datasource": "${DS_PROMETHEUS}",
            "fieldConfig": {
                "defaults": {
                    "unit": "pps",
                    "color": {
                        "mode": "palette-classic"
                    },
                    "custom": {
                        "lineWidth": 2,
                        "fillOpacity": 20,
                        "gradientMode": "opacity"
                    }
                }
            },
            "options": {
                "legend": {
                    "displayMode": "table",
                    "placement": "right"
                },
                "tooltip": {
                    "mode": "multi"
                }
            },
            "targets": [
                {
                    "refId": "A",
                    "expr": "rate(sennet_rx_packets_total{agent_id=~\"$agent\"}[1m])",
                    "legendFormat": "{{agent_id}} - RX"
                }
            ]
        },
        {
            "id": 2,
            "title": "Packets/sec (Egress)",
            "type": "timeseries",
            "gridPos": {
                "x": 12,
                "y": 0,
                "w": 12,
                "h": 8
            },
            "datasource": "${DS_PROMETHEUS}",
            "fieldConfig": {
                "defaults": {
                    "unit": "pps",
                    "color": {
                        "mode": "palette-classic"
                    },
                    "custom": {
                        "lineWidth": 2,
                        "fillOpacity": 20,
                        "gradientMode": "opacity"
                    }
                }
            },
            "targets": [
                {
                    "refId": "A",
                    "expr": "rate(sennet_tx_packets_total{agent_id=~\"$agent\"}[1m])",
                    "legendFormat": "{{agent_id}} - TX"
                }
            ]
        },
        {
            "id": 3,
            "title": "Throughput (Bytes/sec)",
            "type": "timeseries",
            "gridPos": {
                "x": 0,
                "y": 8,
                "w": 12,
                "h": 8
            },
            "datasource": "${DS_PROMETHEUS}",
            "fieldConfig": {
                "defaults": {
                    "unit": "Bps",
                    "color": {
                        "mode": "palette-classic"
                    },
                    "custom": {
                        "lineWidth": 2,
                        "fillOpacity": 20
                    }
                }
            },
            "targets": [
                {
                    "refId": "A",
                    "expr": "rate(sennet_rx_bytes_total{agent_id=~\"$agent\"}[1m])",
                    "legendFormat": "{{agent_id}} - RX Bytes"
                },
                {
                    "refId": "B",
                    "expr": "rate(sennet_tx_bytes_total{agent_id=~\"$agent\"}[1m])",
                    "legendFormat": "{{agent_id}} - TX Bytes"
                }
            ]
        },
        {
            "id": 4,
            "title": "Drop Rate",
            "type": "timeseries",
            "gridPos": {
                "x": 12,
                "y": 8,
                "w": 12,
                "h": 8
            },
            "datasource": "${DS_PROMETHEUS}",
            "fieldConfig": {
                "defaults": {
                    "unit": "pps",
                    "color": {
                        "fixedColor": "red",
                        "mode": "fixed"
                    },
                    "custom": {
                        "lineWidth": 2,
                        "fillOpacity": 30
                    },
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "yellow",
                                "value": 10
                            },
                            {
                                "color": "red",
                                "value": 100
                            }
                        ]
                    }
                }
            },
            "targets": [
                {
                    "refId": "A",
                    "expr": "rate(sennet_drop_count_total{agent_id=~\"$agent\"}[1m])",
                    "legendFormat": "{{agent_id}} - Drops"
                }
            ]
        },
        {
            "id": 5,
            "title": "Anomalies (from RingBuf)",
            "type": "stat",
            "gridPos": {
                "x": 0,
                "y": 16,
                "w": 8,
                "h": 4
            },
            "datasource": "${DS_PROMETHEUS}",
            "fieldConfig": {
                "defaults": {
                    "unit": "short",
                    "color": {
                        "mode": "thresholds"
                    },
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "yellow",
                                "value": 1
                            },
                            {
                                "color": "red",
                                "value": 10
                            }
                        ]
                    }
                }
            },
            "options": {
                "graphMode": "area",
                "colorMode": "background"
            },
            "targets": [
                {
                    "refId": "A",
                    "expr": "sum(increase(sennet_anomaly_events_total{agent_id=~\"$agent\"}[5m]))",
                    "legendFormat": "Anomalies (5m)"
                }
            ]
        },
        {
            "id": 6,
            "title": "Large Packets Detected",
            "type": "stat",
            "gridPos": {
                "x": 8,
                "y": 16,
                "w": 8,
                "h": 4
            },
            "datasource": "${DS_PROMETHEUS}",
            "fieldConfig": {
                "defaults": {
                    "unit": "short",
                    "color": {
                        "mode": "thresholds"
                    },
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "color": "blue",
                                "value": null
                            },
                            {
                                "color": "yellow",
                                "value": 100
                            }
                        ]
                    }
                }
            },
            "targets": [
                {
                    "refId": "A",
                    "expr": "sum(increase(sennet_large_packet_events_total{agent_id=~\"$agent\"}[5m]))",
                    "legendFormat": "Large Packets (5m)"
                }
            ]
        },
        {
            "id": 7,
            "title": "Active Agents",
            "type": "stat",
            "gridPos": {
                "x": 16,
                "y": 16,
                "w": 8,
                "h": 4
            },
            "datasource": "${DS_PROMETHEUS}",
            "fieldConfig": {
                "defaults": {
                    "unit": "short",
                    "color": {
                        "fixedColor": "green",
                        "mode": "fixed"
                    }
                }
            },
            "targets": [
                {
                    "refId": "A",
                    "expr": "count(up{job=\"sennet\"} == 1)",
                    "legendFormat": "Active"
                }
            ]
        },
        {
            "id": 8,
            "title": "Anomaly Events Log",
            "type": "table",
            "gridPos": {
                "x": 0,
                "y": 20,
                "w": 24,
                "h": 6
            },
            "datasource": "${DS_PROMETHEUS}",
            "fieldConfig": {
                "defaults": {},
                "overrides": [
                    {
                        "matcher": {
                            "id": "byName",
                            "options": "Time"
                        },
                        "properties": [
                            {
                                "id": "custom.width",
                                "value": 200
                            }
                        ]
                    }
                ]
            },
            "options": {
                "showHeader": true,
                "sortBy": [
                    {
                        "displayName": "Time",
                        "desc": true
                    }
                ]
            },
            "targets": [
                {
                    "refId": "A",
                    "expr": "sennet_anomaly_events_total",
                    "format": "table",
                    "instant": true
                }
            ],
            "transformations": [
                {
                    "id": "organize",
                    "options": {
                        "excludeByName": {
                            "__name__": true
                        },
                        "renameByName": {
                            "agent_id": "Agent",
                            "Value": "Count"
                        }
                    }
                }
            ]
        }
    ],
    "__inputs": [
        {
            "name": "DS_PROMETHEUS",
            "label": "Prometheus",
            "description": "Prometheus datasource for Sennet metrics",
            "type": "datasource",
            "pluginId": "prometheus",
            "pluginName": "Prometheus"
        }
    ],
    "__requires": [
        {
            "type": "grafana",
            "id": "grafana",
            "name": "Grafana",
            "version": "10.0.0"
        },
        {
            "type": "datasource",
            "id": "prometheus",
            "name": "Prometheus",
            "version": "1.0.0"
        }
    ]
}